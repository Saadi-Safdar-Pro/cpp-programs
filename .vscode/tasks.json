{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build C++ file",
      "type": "shell",
      "command": "g++",
      "args": [
      "-g",
      "${file}",
      "-o",
      "${workspaceFolder}/C++/build/${fileBasenameNoExtension}"
      ]
      ,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
